{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - [%(levelname)s] - %(name)s: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "simple": {
            "format": "[%(levelname)s] %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "standard",
            "filename": "glistbot.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "error_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "standard",
            "filename": "glistbot_error.log",
            "maxBytes": 10485760,
            "backupCount": 2,
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "glistbot": {
            "handlers": ["console", "file", "error_file"],
            "level": "INFO",
            "propagate": false
        },
        "discord": {
            "handlers": ["console", "file"],
            "level": "WARNING",
            "propagate": false
        }
    },
    "root": {
        "handlers": ["console"],
        "level": "INFO"
    }
}
